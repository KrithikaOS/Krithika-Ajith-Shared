<?xml version="1.0" encoding="UTF-8"?>
<cronentries>

    <cron>
        <url>/cron/sync/contacts</url>
        <target>backend</target>
        <description>Daily Contacts Sync </description>
        <schedule>every day 00:01</schedule>
    </cron>

    <cron>
        <url>/cron/sync/stats/daily</url>
        <target>backend</target>
        <description>Daily User Data Fetching</description>
        <schedule>every day 00:15</schedule>
    </cron>

    <cron>
        <url>/cron/calculate/week/stats</url>
        <target>backend</target>
        <description>Weekly User Stats</description>
        <schedule>every monday 00:30</schedule>
    </cron>

    <cron>
        <url>/cron/weeks/stats/average</url>
        <target>backend</target>
        <description>Weekly Average Calculation</description>
        <schedule>every monday 00:45</schedule>
    </cron>


</cronentries>