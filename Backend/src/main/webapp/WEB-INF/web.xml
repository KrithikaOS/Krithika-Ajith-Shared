<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"

         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">


    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.fullLearn.servlets.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserWeekStats</servlet-name>
        <servlet-class>com.fullLearn.servlets.UserWeekStats</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserWeekStats</servlet-name>
        <url-pattern>api/learn/stats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LearningStatsAvg</servlet-name>
        <servlet-class>com.fullLearn.servlets.LearningStatsAvg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LearningStatsAvg</servlet-name>
        <url-pattern>api/learn/average/all</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FullLearnProjectWeeklyReport</servlet-name>
        <servlet-class>com.fullLearn.servlets.FullLearnProjectWeeklyReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullLearnProjectWeeklyReport</servlet-name>
        <url-pattern>api/report/weekly</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FullLearnProjectLearningStatsAverage</servlet-name>
        <servlet-class>com.fullLearn.servlets.FullLearnProjectLearningStatsAverage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullLearnProjectLearningStatsAverage</servlet-name>
        <url-pattern>api/report/stats/average</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FullLearnProject</servlet-name>
        <servlet-class>com.fullLearn.servlets.FullLearnProjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullLearnProject</servlet-name>
        <url-pattern>api/fetch/userstats</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
